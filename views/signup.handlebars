<div class="login-container container-fixed">
  <h1>Enter Your Info Below:</h1>
  <form id="user-form" class="signup-form">
    <div class="form-group">
      <label for="exampleInputEmail1">Email address</label>
      <input
        type="email"
        class="form-control"
        id="email-signup"
        aria-describedby="emailHelp"
        placeholder="Enter email"
      />
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Password</label>
      <input
        type="password"
        class="form-control"
        id="password-signup"
        placeholder="Password"
      />
    </div>
    <div class="form-group">
      <label for="exampleInputHeight1">Height</label>
      <input
        type="number"
        class="form-control"
        id="height-signup"
        placeholder="Height in Inches"
      />
    </div>
    <div class="form-group">
      <label for="exampleInputWeight1">Weight</label>
      <input
        type="number"
        class="form-control"
        id="weight-signup"
        placeholder="Weight in Pounds"
      />
    </div>
    <div class="form-group">
      <label for="exampleInputAge1">Age</label>
      <input
        type="number"
        class="form-control"
        id="age-signup"
        placeholder="Age"
      />
    </div>
    <div id="checklist" class="form-group">
      <label>Gender</label><br />
      <input type="radio" id="male" name="gender" value="Male" />
       
      <label for="male">Male</label><br />
       
      <input type="radio" id="female" name="gender" value="Female" />
       
      <label for="female">Female</label><br />
    </div>
    <button id="button" type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<script src="/js/signup.js"></script>